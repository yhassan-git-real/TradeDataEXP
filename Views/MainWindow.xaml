<Window x:Class="TradeDataEXP.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TradeDataEXP - Professional Export Application"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2E86AB"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#6B73FF"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#F18F01"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="LightBrush" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="DarkBrush" Color="#2D3748"/>
        
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Simple Input Style -->
        <Style x:Key="ModernInputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Focusable="false" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Simple Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6" 
                                Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource LightBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Database Status -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left: Application Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“Š" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="TradeDataEXP" FontSize="22" FontWeight="Bold" 
                                 Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="Professional Export Trade Data Application" FontSize="12" 
                                 Foreground="#B3D9FF" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Right: Database Status -->
                <Border Grid.Column="1" Background="#40FFFFFF" CornerRadius="8" 
                        Padding="16,8" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ—„ï¸" Foreground="White" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Database:" Foreground="White" FontWeight="Medium" FontSize="13"/>
                        <TextBlock Text="{Binding DatabaseStatus}" Foreground="White" FontWeight="Bold" Margin="6,0,8,0" FontSize="13"/>
                        <Ellipse Width="8" Height="8" Fill="#4ADE80" VerticalAlignment="Center"/>
                        <TextBlock Text="ACTIVE" Foreground="#4ADE80" FontSize="11" FontWeight="Bold" Margin="6,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel>
                <!-- Export Parameters -->
                <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,20" 
                        BorderBrush="#E5E7EB" BorderThickness="1">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Background="{StaticResource PrimaryBrush}" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                <TextBlock Text="ðŸ“Š" FontSize="16" Foreground="White"/>
                            </Border>
                            <TextBlock Text="Export Parameters" FontSize="18" FontWeight="Bold" 
                                     Foreground="{StaticResource DarkBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 1 -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="HS Code" FontSize="13" FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Parameters.HsCode}" Style="{StaticResource ModernInputStyle}" 
                                       ToolTip="Enter HS Code (e.g., 3901%)"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,8,0">
                                <TextBlock Text="Product" FontSize="13" FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Parameters.Product}" Style="{StaticResource ModernInputStyle}" 
                                       ToolTip="Enter Product name"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="8,0,8,0">
                                <TextBlock Text="Exporter" FontSize="13" FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Parameters.ExporterName}" Style="{StaticResource ModernInputStyle}" 
                                       ToolTip="Enter Exporter company name"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="3" Margin="8,0,8,0">
                                <TextBlock Text="From Date" FontSize="13" FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Parameters.FromMonthSerial}" Style="{StaticResource ModernInputStyle}" 
                                       ToolTip="YYYYMM format (e.g., 202501)"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="4" Margin="16,0,0,0">
                                <TextBlock Text="To Date" FontSize="13" FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Parameters.ToMonthSerial}" Style="{StaticResource ModernInputStyle}" 
                                       ToolTip="YYYYMM format (e.g., 202507)"/>
                            </StackPanel>

                            <!-- Row 2 -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,20,16,0">
                                <TextBlock Text="IEC Code" FontSize="13" FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Parameters.Iec}" Style="{StaticResource ModernInputStyle}" 
                                       ToolTip="Enter IEC code"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,20,8,0">
                                <TextBlock Text="Foreign Party" FontSize="13" FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Parameters.ForeignParty}" Style="{StaticResource ModernInputStyle}" 
                                       ToolTip="Enter Foreign importer name"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="8,20,8,0">
                                <TextBlock Text="Country" FontSize="13" FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Parameters.ForeignCountry}" Style="{StaticResource ModernInputStyle}" 
                                       ToolTip="Enter destination country"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="3" Margin="8,20,8,0">
                                <TextBlock Text="Port" FontSize="13" FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Parameters.Port}" Style="{StaticResource ModernInputStyle}" 
                                       ToolTip="Enter port of origin"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,20" 
                        BorderBrush="#E5E7EB" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="{StaticResource AccentBrush}" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                <TextBlock Text="ðŸ“¤" FontSize="16" Foreground="White"/>
                            </Border>
                            <TextBlock Text="Ready to Export Trade Data" FontSize="16" FontWeight="SemiBold" 
                                     Foreground="{StaticResource DarkBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Command="{Binding ResetCommand}" 
                                    Background="{StaticResource SecondaryBrush}" Foreground="White"
                                    Width="110" Height="40" Margin="0,0,12,0"
                                    Style="{StaticResource ModernButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Reset" FontSize="13" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding DownloadExcelCommand}" 
                                    Background="{StaticResource SuccessBrush}" Foreground="White"
                                    Width="140" Height="40"
                                    Style="{StaticResource ModernButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“Š" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Export Excel" FontSize="13" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Status Panel -->
                <Border Background="White" CornerRadius="8" Padding="24" Margin="0,0,0,20" 
                        BorderBrush="#E5E7EB" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="{StaticResource PrimaryBrush}" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                <TextBlock Text="â„¹ï¸" FontSize="16" Foreground="White"/>
                            </Border>
                            <TextBlock Text="Application Status" FontSize="16" FontWeight="SemiBold" 
                                     Foreground="{StaticResource DarkBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Border Grid.Column="1" Background="{StaticResource LightBrush}" CornerRadius="6" 
                                Padding="16,8" Margin="20,0,20,0">
                            <TextBlock Text="{Binding StatusMessage}" FontSize="14" 
                                     Foreground="{StaticResource SuccessBrush}" FontWeight="Medium"
                                     VerticalAlignment="Center"/>
                        </Border>
                        
                        <Button Grid.Column="2" Command="{Binding ClearCommand}" 
                                Background="Transparent" BorderBrush="{StaticResource SecondaryBrush}"
                                BorderThickness="2" Width="100" Height="36"
                                Style="{StaticResource ModernButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ—‘ï¸" FontSize="13" Margin="0,0,5,0"/>
                                <TextBlock Text="Clear" FontSize="12" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource DarkBrush}" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="â„¹ï¸" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="White" 
                             VerticalAlignment="Center" FontSize="13"/>
                </StackPanel>

                <ProgressBar Grid.Column="1" IsIndeterminate="{Binding IsLoading}" 
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Width="100" Height="6" Margin="10,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
